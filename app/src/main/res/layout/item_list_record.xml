<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/data_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2018-09-18 16:00"
            android:textColor="@color/tv_text_main" />

        <TextView
            android:id="@+id/car_no"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="沪A5678000"
            android:textColor="@color/tv_text_main" />

        <Button
            android:id="@+id/print"
            android:textSize="14sp"
            android:background="@drawable/btn_selector_main"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="打印凭条"
            android:textColor="@color/app_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/pay_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="其他"
            android:textColor="@color/tv_text_main" />

        <TextView
            android:id="@+id/pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="12.00元"
            android:textColor="@color/tv_text_main" />

        <TextView
            android:id="@+id/print_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已打印"
            android:textColor="@color/tv_text_main" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_bg2"
        />

</LinearLayout>
