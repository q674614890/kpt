<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    tools:context=".acitivity.BillingActivity">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:text="请输入开票金额"
        android:textColor="@color/tv_text_main"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1">

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/common_et_bg"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColor="@color/tv_text_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="元"
            android:textColor="@color/tv_text_main"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:padding="10dp"
        android:text="请输入车牌信息"
        android:textColor="@color/tv_text_main"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2">


        <EditText
            android:id="@+id/car_no"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:letterSpacing="0.2"
            android:maxLength="8"
            android:background="@drawable/common_et_bg"
            android:paddingLeft="10dp"
            android:textColor="@color/tv_text_main" />

    </RelativeLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/btn_selector_main"
        android:text="确  定"
        android:textColor="@color/app_white"
        android:textSize="18sp" />

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#d1d5db"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@drawable/selector_key_background"
        android:keyPreviewHeight="43dp"
        android:keyPreviewLayout="@layout/key_preview_layout"
        android:keyTextColor="#333333"
        android:keyTextSize="16sp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:shadowColor="#00000000"
        android:shadowRadius="0.0"
        android:visibility="gone" />
</RelativeLayout>